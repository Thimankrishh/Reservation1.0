<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_available"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="62dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_imagear"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/abc_btn_radio_material">
            </ImageView>


            <LinearLayout
                android:id="@+id/ll1ar"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                >

                <TextView
                    android:id="@+id/tv_text_rnar"
                    android:layout_toRightOf ="@+id/iv_imagear"
                    android:layout_width="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"
                    android:hint="12"
                    android:layout_height="wrap_content"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_book_rnoar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Id"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/tv_textar"
                    android:layout_toRightOf="@+id/iv_imagear"
                    android:layout_toEndOf="@+id/iv_imagear">
                </TextView>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll2ar"
                android:layout_width="80dp"
                android:layout_toRightOf="@id/ll1ar"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"

                >

                <TextView
                    android:id="@+id/tv_rtar"
                    android:layout_width="wrap_content"
                    android:hint="single"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_rt_ar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room Type "
                    android:layout_margin="4dp">
                    <!--android:layout_toRightOf="@+id/iv_image"-->
                    <!--android:layout_toEndOf="@+id/iv_image">-->
                </TextView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll3ar"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/ll2ar"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/tv_l_ar"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/ll2ar"
                    android:layout_margin="1dp"
                    android:hint="floor 1"


                    android:layout_height="wrap_content"
                    >
                </TextView>

                <TextView
                    android:id="@+id/tv_loc_ar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ll2ar"
                    android:layout_alignBottom="@id/ll2ar"
                    android:text="Location"
                    android:layout_margin="5dp">
                    <!--android:layout_toRightOf="@+id/iv_image"-->
                    <!--android:layout_toEndOf="@+id/iv_image">-->
                </TextView>
            </LinearLayout>









        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>